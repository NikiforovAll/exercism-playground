// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.0/containers/dotnetcore
{
	"name": "Exercism development environnement",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			// Update 'VARIANT' to pick a .NET Core version: 2.1-bionic, 3.1-bionic
			"VARIANT": "3.1-bionic"
		}
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"formulahendry.dotnet-test-explorer",
		"ms-dotnettools.csharp",
		"editorconfig.editorconfig",
		"naumovs.trailing-semicolon",
		"k--kato.docomment",
		"eamodio.gitlens",
		"mhutchie.git-graph",
		"codezombiech.gitignore",
		"yzhang.markdown-all-in-one",
		"tintoy.msbuild-project-tools",
		"nikiforovall.surround-with-csharp",
		"dotjoshjohnson.xml",
		"arthurwang.vsc-prolog"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5000, 5001],

    // Next, after running the command above, uncomment lines in the 'mounts' and 'remoteEnv' lines below,
	// and open / rebuild the container so the settings take effect.
	//
	"mounts": [
		// "source=${env:HOME}${env:USERPROFILE}/.aspnet/https,target=/home/vscode/.aspnet/https,type=bind"
	],
	"remoteEnv": {},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "dotnet restore",

	// Comment this out to connect as a root instead.
	"remoteUser": "vscode",
	"workspaceFolder": "/home/vscode/exercism",
	"workspaceMount": "source=${localWorkspaceFolder}/,target=/home/vscode/exercism,type=bind,consistency=cached"
}
